{
	"name": "pp",
	"license": "BSL-1.0",
	"targetType": "dynamicLibrary",
	"description": "The base library of the polyplex engine. (Heavily WIP, non-idiomatic)",
	"stringImportPaths": [
		"shaders/"
	],
	"subPackages": [
		"./modules/openal/",
		"./modules/core/",
		"./modules/audio/",
		"./modules/math/",
		"./modules/utils/",
		"./modules/backends/render/gl3"
	],
	"versions": ["SDL_209", "GL_33", "GL_AllowDeprecated"],
	"configurations": [
		{
			"name": "simplemath",
			"subConfigurations": {
				"pp:math": "simplemath"
			}
		},
		{
			"name": "glmath",
			"subConfigurations": {
				"pp:math": "glmath"
			}
		}
	],
	"dependencies": {
		"colorize": "~>1.0.5",
		"sharpevents": "~>1.0.0",
		"ppc": "~>0.2.0",

		"bindbc-loader": "~>0.1.1",

		"bindbc-sdl": "~>0.5.1",
		
		"pp:utils": "*",
		"pp:core": "*",
		"pp:openal": "*",
		"pp:gl3": "*",
		"pp:audio": "*"
	}
}
